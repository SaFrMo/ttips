{
  "name": "ttips",
  "version": "0.3.1",
  "main": "./src/index.js",
  "description": "Tooltip module",
  "author": "Steffen BÃ¤r <stbaer.pub@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/stbaer",
  "repository": "stbaer/ttips",
  "bugs": {
    "url": "https://github.com/stbaer/ttips/issues"
  },
  "keywords": [
    "tooltip",
    "tooltips",
    "browserify"
  ],
  "scripts": {
    "test": "browserify -t cssify test/unit/*.js | browser-run | faucet",
    "clean": "rm -rf ./standalone",
    "show-gzipped-minjs-size": "echo \"js minified and gzipped: \" && gzip -c standalone/ttips.min.js | wc -c",
    "bundle-standalone": "mkdirp standalone && browserify -t cssify src/index.js --standalone=\"ttips\" > standalone/ttips.js ",
    "uglify:standalone": "uglifyjs standalone/ttips.js --screw-ie8 -cm > standalone/ttips.min.js",
    "uglify": "npm run uglify:standalone",
    "build": "npm run clean && jshint src/*.js && npm run bundle-standalone && npm run uglify && npm run show-gzipped-minjs-size",
    "test-visual": "beefy test/visual/ttips.js --index=test/visual/beefy.html -- -t cssify"
  },
  "browserify": {
    "transform": "cssify"
  },
  "dependencies": {
    "cssify": "^1.0.2"
  },
  "devDependencies": {
    "browser-run": "^3.0.8",
    "browserify": "^13.0.0",
    "faucet": "0.0.1",
    "jshint": "^2.9.1",
    "tape": "^4.5.1",
    "testling": "^1.7.1",
    "uglify-js": "latest",
    "watchify": "^3.7.0"
  }
}
